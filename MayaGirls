  <!-- Admin Panel -->
  <section id="admin" class="admin-section">
    <h2>Admin Panel (Password Protected)</h2>
    <input type="password" id="admin-pass" placeholder="Enter Admin Password">
    <button onclick="adminLogin()">Login</button>

    <div id="admin-area" style="display:none;">
      <h3>Post News & Events</h3>
      <input type="text" id="news-title" placeholder="Title">
      <textarea id="news-content" placeholder="Content"></textarea>
      <button onclick="postNews()">Post News</button>

      <h3>Post Academic Progress</h3>
      <input type="text" id="progress-title" placeholder="Title">
      <textarea id="progress-content" placeholder="Content"></textarea>
      <button onclick="postProgress()">Post Progress</button>

      <h3>View Applications</h3>
      <div id="applications-list"></div>

