      <input type="tel" id="vac-phone" placeholder="Phone Number" required>
      <input type="email" id="vac-email" placeholder="Email Address" required>
      <select id="vac-class" required>
        <option value="">Select Class to Join</option>
        <option>Grade 10</option>
        <option>Form 3</option>
        <option>Form 4</option>
      </select>
      <input type="number" id="vac-year" placeholder="Year to Join" required>
      <button type="submit">Submit Application</button>
    </form>
    <div id="vacancy-success"></div>
